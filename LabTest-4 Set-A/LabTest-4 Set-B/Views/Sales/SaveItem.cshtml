@using LabTest_4_Set_B.Models
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        .container {
            padding: 5px;
        }

        label.error {
            color: red;
        }

        input.error {
            border: 1px solid red;
        }

        .form-element label {
            display: inline-block;
            width: 150px;
        }
    </style>
    <title>SaveItem</title>
</head>
<body>

    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <nav class="navbar navbar-inverse">
                    <div class="container-fluid">
                        <ul class="nav navbar-nav">
                            <li><a href="@Url.Action("StartPage", "Sales")">Home</a></li>
                            <li class="active"><a href="@Url.Action("SaveItem", "Sales")">Save</a></li>
                            <li><a href="@Url.Action("GetItemSalesInfo", "Sales")">View</a></li>
                        </ul>
                    </div>
                </nav>
                <form method="POST" id="SaveItem">
                    <table align="center">
                        <tr>
                            <td><label for="StationaryName">Stationary Name</label></td>
                            <td>
                                <div class="form-group">

                                    <input type="text" class="form-control" id="StationaryName" placeholder="Put a Stationary Name" name="StationaryName">
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td><label for="Items">Type</label></td>
                            <td>
                                <div class="form-group">

                                    <select class="form-control" id="Items" name="ItemId">
                                        <option value="">--Select Type--</option>
                                        @foreach (Item aItem in ViewBag.ItemList)
                                        {
                                            <option value="@aItem.Id">@aItem.Name</option>
                                        }
                                    </select>
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td><label for="Price">Price</label></td>
                            <td>
                                <div class="form-group">

                                    <input type="number" class="form-control" id="Price" min="1" placeholder="Enter Price" name="Price">
                                </div>
                            </td>
                            <td>Taka</td>
                        </tr>

                        <tr>
                            <td><label for="Purpose">Purpose</label></td>
                            <td>
                                <div class="form-group">

                                    <input type="text" class="form-control" id="Purpose" placeholder="Enter Your Purpose" name="Purpose">
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>
                                <div class="form-group" align="right">
                                    <button type="submit" class="btn btn-primary">Save</button>
                                </div>
                            </td>
                        </tr>
                    </table>
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success">@ViewBag.Message</div>
                    }
                </form>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script>
        $("#SaveItem").validate({
            rules: {
                StationaryName: "required",
                ItemId: "required",
                Price: {
                    required: true
                },
                Purpose: {
                    required: true
                }

            },
            messages: {
                StationaryName: "Please Provide a Stationary Name",
                ItemId: "Please Select a Type",
                Price: {
                    required: "Please Put the Price"
                },
                Purpose: {
                    required: "Please Write the Purpose"
                }
            }
        });
    </script>
</body>
</html>
