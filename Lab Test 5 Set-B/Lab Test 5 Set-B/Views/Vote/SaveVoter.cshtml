@model Lab_Test_5_Set_B.Models.Voter
@{
    ViewBag.Title = "SaveVoter";
}
<style>
    .input-validation-error {
        
        border: 2px solid red;
    }
    .field-validation-error {
        color: red;
    }
</style>
@using (Html.BeginForm(FormMethod.Post))
{
    <div align="center">
        <h3 class="text-muted">Voter Entry</h3>
        <table>
            <tr>
                <td class="text-right">Voter Name</td>
                <td>
                    @Html.TextBoxFor(m => m.VotersName, new { @class = "form-control" , placeholder="Enter Voter Name"})
                    @Html.ValidationMessageFor(m => m.VotersName)
                </td>
            </tr>
            <tr>
                <td class="text-right">Voter ID</td>
                <td>
                    @Html.TextBoxFor(m => m.VotersId, new { @class = "form-control" , placeholder= "Enter Voter's 17 Digit Id"})
                    @Html.ValidationMessageFor(m => m.VotersId)
                </td>
            </tr>

            <tr>
                <td></td>
                <td align="right"><input type="submit" class="btn btn-success" value="Save" /></td>
            </tr>
        </table>
        @if (ViewBag.Message != null)
        {
            if (ViewBag.Message == "Voter Info Saved Successfully")
            {
                <div class="alert alert-success" role="alert">
                    @ViewBag.Message
                </div>
            }
            else
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Message
                </div>
            }
        }

    </div>
}

@section scripts {
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}