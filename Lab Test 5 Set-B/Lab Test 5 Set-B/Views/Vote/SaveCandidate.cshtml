@model Lab_Test_5_Set_B.Models.Candidate
@{
    ViewBag.Title = "SaveCanddate";
}



<style>
    .input-validation-error {
        border: 2px solid red;
    }

    .field-validation-error {
        color: red;
    }
    .center {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
    }
</style>
@using (Html.BeginForm(FormMethod.Post))
{
    <div align="center">
        <h3 class="text-muted">Candidate Entry</h3>
        <table>
            <tr>
                <td class="text-right">Candidate Name</td>
                <td>
                    @Html.TextBoxFor(m => m.Candidatename, new { @class = "form-control", placeholder = "Enter Candidate Name" })
                    @Html.ValidationMessageFor(m => m.Candidatename)
                </td>
            </tr>
            <tr>
                <td class="text-right">Symbol</td>
                <td>
                    @Html.TextBoxFor(m => m.CandidateSymbol, new { @class = "form-control", placeholder = "Enter Symbol Name" })
                    @Html.ValidationMessageFor(m => m.CandidateSymbol)
                </td>
            </tr>

            <tr>
                <td></td>
                <td align="right"><input type="submit" class="btn btn-success" value="Save" /></td>
            </tr>
        </table>
        @if (ViewBag.Message != null)
        {
            if (ViewBag.Message == "Candidate Info Saved Successfully")
            {
                <div class="alert alert-success" role="alert">
                    @ViewBag.Message
                </div>
            }
            else
            {
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Message
                </div>
            }
        }

    </div>
}

@section scripts {
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}